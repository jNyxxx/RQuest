<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="40dp">

        <!-- ORANGE HEADER BACKGROUND -->
        <View
            android:id="@+id/viewHeader"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:background="@color/rq_orange"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Back Button -->
        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="40dp"
            android:contentDescription="@string/back_button"
            android:rotation="180"
            android:src="@android:drawable/ic_menu_revert"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:tint="@color/white" />

        <!-- Profile Avatar -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardAvatar"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginStart="24dp"
            app:cardCornerRadius="35dp"
            app:cardElevation="0dp"
            app:layout_constraintBottom_toBottomOf="@id/viewHeader"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/viewHeader"
            app:layout_constraintVertical_bias="0.7">

            <ImageView
                android:id="@+id/ivProfileAvatar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#EEE"
                android:contentDescription="@string/profile_avatar"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_launcher_foreground" />
        </androidx.cardview.widget.CardView>

        <!-- Name & Email -->
        <TextView
            android:id="@+id/tvName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:text="@string/sample_name"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@id/cardAvatar"
            app:layout_constraintTop_toTopOf="@id/cardAvatar"
            tools:ignore="VisualLintOverlap" />

        <TextView
            android:id="@+id/tvEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/sample_email"
            android:textColor="#E0E0E0"
            android:textSize="12sp"
            app:layout_constraintStart_toStartOf="@id/tvName"
            app:layout_constraintTop_toBottomOf="@id/tvName" />

        <!-- Edit Profile Button (Top Right) -->
        <LinearLayout
            android:id="@+id/btnEditProfile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="@id/cardAvatar"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/cardAvatar">

            <ImageView
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:contentDescription="@string/edit_icon"
                android:src="@android:drawable/ic_menu_edit"
                app:tint="@color/white" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:text="@string/edit_profile"
                android:textColor="@color/white"
                android:textSize="12sp" />
        </LinearLayout>

        <!-- GENERAL SECTION -->
        <TextView
            android:id="@+id/lblGeneral"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="32dp"
            android:text="@string/general"
            android:textColor="#333"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/viewHeader" />

        <LinearLayout
            android:id="@+id/layoutGeneral"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="vertical"
            android:paddingHorizontal="24dp"
            app:layout_constraintTop_toBottomOf="@id/lblGeneral">

            <!-- Item 1 -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableStart="@android:drawable/btn_star_big_off"
                android:drawableEnd="@android:drawable/arrow_down_float"
                android:drawablePadding="16dp"
                android:drawableTint="#555"
                android:gravity="center_vertical"
                android:paddingVertical="12dp"
                android:text="@string/favorite_cars"
                android:textColor="#555"
                tools:ignore="UseCompatTextViewDrawableXml" />

            <!-- Item 2 -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableStart="@android:drawable/ic_menu_recent_history"
                android:drawableEnd="@android:drawable/arrow_down_float"
                android:drawablePadding="16dp"
                android:drawableTint="#555"
                android:gravity="center_vertical"
                android:paddingVertical="12dp"
                android:text="@string/previous_rent"
                android:textColor="#555"
                tools:ignore="UseCompatTextViewDrawableXml" />
        </LinearLayout>

        <!-- SUPPORT SECTION -->
        <TextView
            android:id="@+id/lblSupport"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="32dp"
            android:text="@string/support"
            android:textColor="#333"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/layoutGeneral" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="vertical"
            android:paddingHorizontal="24dp"
            app:layout_constraintTop_toBottomOf="@id/lblSupport">

            <!-- Item 1 -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableStart="@android:drawable/ic_menu_preferences"
                android:drawableEnd="@android:drawable/arrow_down_float"
                android:drawablePadding="16dp"
                android:drawableTint="#555"
                android:gravity="center_vertical"
                android:paddingVertical="12dp"
                android:text="@string/settings"
                android:textColor="#555"
                tools:ignore="UseCompatTextViewDrawableXml" />

            <!-- Item 2 -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableStart="@android:drawable/ic_menu_info_details"
                android:drawableEnd="@android:drawable/arrow_down_float"
                android:drawablePadding="16dp"
                android:drawableTint="#555"
                android:gravity="center_vertical"
                android:paddingVertical="12dp"
                android:text="@string/help_support"
                android:textColor="#555"
                tools:ignore="UseCompatTextViewDrawableXml" />

            <!-- LOGOUT -->
            <TextView
                android:id="@+id/btnLogout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableStart="@android:drawable/ic_lock_power_off"
                android:drawableEnd="@android:drawable/arrow_down_float"
                android:drawablePadding="16dp"
                android:drawableTint="#555"
                android:gravity="center_vertical"
                android:paddingVertical="12dp"
                android:text="@string/log_out"
                android:textColor="#555"
                tools:ignore="UseCompatTextViewDrawableXml" />
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>