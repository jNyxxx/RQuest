<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:padding="20dp">

    <!-- Top Navigation -->
    <FrameLayout
        android:id="@+id/btnBack"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/bg_input_field"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@android:drawable/ic_menu_revert"
            android:rotation="180"
            android:layout_gravity="center"
            android:contentDescription="@string/back_button"
            app:tint="#333"/>
    </FrameLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/car_details"
        android:textStyle="bold"
        android:textSize="18sp"
        android:textColor="#333"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/btnBack"
        app:layout_constraintBottom_toBottomOf="@id/btnBack"/>

    <FrameLayout
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/bg_input_field"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@android:drawable/ic_menu_more"
            android:layout_gravity="center"
            android:contentDescription="@string/more_options"
            app:tint="#333"/>
    </FrameLayout>

    <!-- Large Car Image -->
    <ImageView
        android:id="@+id/ivDetailCar"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:layout_marginTop="20dp"
        android:scaleType="fitCenter"
        android:contentDescription="@string/car_image"
        android:src="@drawable/ic_launcher_foreground"
        app:layout_constraintTop_toBottomOf="@id/btnBack"/>

    <!-- Content Panel -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/ivDetailCar"
        app:layout_constraintBottom_toTopOf="@id/btnBookNow">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Title & Price Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:baselineAligned="false">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/tvDetailTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/tesla_model_s"
                        android:textSize="22sp"
                        android:textStyle="bold"
                        android:textColor="#333"
                        tools:ignore="VisualLintLongText" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/premium_car"
                        android:textColor="#999"
                        android:textSize="14sp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="end">
                    <TextView
                        android:id="@+id/tvDetailPrice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/price_sample"
                        android:textColor="@color/rq_orange"
                        android:textSize="20sp"
                        android:textStyle="bold"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/per_day"
                        android:textColor="#999"
                        android:textSize="12sp"/>
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/car_features"
                android:textStyle="bold"
                android:textColor="#333"
                android:textSize="16sp"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="16dp"/>

            <!-- Features Grid -->
            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="3"
                android:rowCount="2"
                android:alignmentMode="alignMargins"
                android:columnOrderPreserved="false">

                <!-- Feature 1: Capacity -->
                <LinearLayout
                    android:orientation="vertical"
                    android:background="@drawable/bg_input_field"
                    android:padding="12dp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_marginEnd="8dp"
                    android:layout_marginBottom="8dp">

                    <ImageView
                        android:src="@android:drawable/ic_menu_myplaces"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:contentDescription="@string/capacity_icon"
                        app:tint="#777"/>

                    <TextView
                        android:text="@string/capacity"
                        android:textSize="12sp"
                        android:layout_marginTop="16dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#999"/>

                    <TextView
                        android:text="@string/five_seats"
                        android:textStyle="bold"
                        android:textColor="#333"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>

                <!-- Feature 2: Engine -->
                <LinearLayout
                    android:orientation="vertical"
                    android:background="@drawable/bg_input_field"
                    android:padding="12dp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_marginEnd="8dp"
                    android:layout_marginBottom="8dp">

                    <ImageView
                        android:src="@android:drawable/ic_lock_idle_charging"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:contentDescription="@string/engine_icon"
                        app:tint="#777"/>

                    <TextView
                        android:text="@string/engine"
                        android:textSize="12sp"
                        android:layout_marginTop="16dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#999"/>

                    <TextView
                        android:text="@string/hp_670"
                        android:textStyle="bold"
                        android:textColor="#333"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>

                <!-- Feature 3: Max Speed -->
                <LinearLayout
                    android:orientation="vertical"
                    android:background="@drawable/bg_input_field"
                    android:padding="12dp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_marginBottom="8dp">

                    <ImageView
                        android:src="@android:drawable/ic_menu_compass"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:contentDescription="@string/max_speed_icon"
                        app:tint="#777"/>

                    <TextView
                        android:text="@string/max_speed"
                        android:textSize="12sp"
                        android:layout_marginTop="16dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#999"/>

                    <TextView
                        android:text="@string/speed_250"
                        android:textStyle="bold"
                        android:textColor="#333"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </GridLayout>

        </LinearLayout>
    </ScrollView>

    <!-- Bottom Button -->
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnBookNow"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:text="@string/book_now"
        android:textAllCaps="false"
        android:background="@drawable/bg_button_orange"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>