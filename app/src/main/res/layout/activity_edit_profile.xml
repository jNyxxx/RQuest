<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent" android:padding="24dp">

    <EditText android:id="@+id/etFirst" android:layout_width="match_parent" android:layout_height="50dp" android:hint="First Name" app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="50dp"/>
    <EditText android:id="@+id/etLast" android:layout_width="match_parent" android:layout_height="50dp" android:hint="Last Name" app:layout_constraintTop_toBottomOf="@id/etFirst"/>
    <EditText android:id="@+id/etEmail" android:layout_width="match_parent" android:layout_height="50dp" android:hint="Email" app:layout_constraintTop_toBottomOf="@id/etLast"/>
    <EditText android:id="@+id/etPhone" android:layout_width="match_parent" android:layout_height="50dp" android:hint="Phone" app:layout_constraintTop_toBottomOf="@id/etEmail"/>
    <Button android:id="@+id/btnSave" android:layout_width="match_parent" android:layout_height="50dp" android:text="Save" android:backgroundTint="#F26E24" app:layout_constraintTop_toBottomOf="@id/etPhone" android:layout_marginTop="20dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>