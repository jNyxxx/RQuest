<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:padding="20dp">

    <!-- Header -->
    <LinearLayout
        android:id="@+id/layoutHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:contentDescription="@string/app_name"
            android:src="@drawable/ic_launcher_foreground"
            app:tint="@color/rq_orange" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_weight="1"
            android:text="@string/app_name"
            android:textColor="@color/rq_orange"
            android:textSize="20sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/ivProfile"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:background="@drawable/bg_input_field"
            android:contentDescription="@string/profile_avatar"
            android:padding="6dp"
            android:src="@android:drawable/ic_menu_myplaces"
            app:tint="#333" />
    </LinearLayout>

    <!-- Welcome Text -->
    <TextView
        android:id="@+id/tvWelcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Welcome, User!"
        android:textColor="#333"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/layoutHeader" />

    <!-- Search Bar -->
    <LinearLayout
        android:id="@+id/layoutSearch"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/bg_input_field"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingHorizontal="12dp"
        app:layout_constraintTop_toBottomOf="@id/tvWelcome">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:contentDescription="@string/search_icon"
            android:src="@android:drawable/ic_menu_search"
            app:tint="#999" />

        <EditText
            android:id="@+id/etSearch"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="12dp"
            android:layout_weight="1"
            android:background="@null"
            android:hint="Search your dream car..."
            android:inputType="text"
            android:textSize="14sp"
            tools:ignore="Autofill" />

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:contentDescription="@string/filter_icon"
            android:src="@android:drawable/ic_menu_sort_by_size"
            app:tint="#999" />
    </LinearLayout>

    <!-- Filter Chips -->
    <HorizontalScrollView
        android:id="@+id/layoutFilters"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:scrollbars="none"
        app:layout_constraintTop_toBottomOf="@id/layoutSearch">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/btnFilterAll"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:background="@drawable/bg_button_orange"
                android:gravity="center"
                android:paddingHorizontal="20dp"
                android:text="All vehicles"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:layout_marginEnd="8dp" />

            <TextView
                android:id="@+id/btnFilterSedan"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:background="@drawable/bg_input_field"
                android:gravity="center"
                android:paddingHorizontal="20dp"
                android:text="Sedan"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:layout_marginEnd="8dp" />

            <TextView
                android:id="@+id/btnFilterHatchback"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:background="@drawable/bg_input_field"
                android:gravity="center"
                android:paddingHorizontal="20dp"
                android:text="Hatchback"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:layout_marginEnd="8dp" />

            <TextView
                android:id="@+id/btnFilterSUV"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:background="@drawable/bg_input_field"
                android:gravity="center"
                android:paddingHorizontal="20dp"
                android:text="SUV"
                android:textColor="@color/black"
                android:textSize="14sp" />
        </LinearLayout>
    </HorizontalScrollView>

    <!-- Vehicle Grid -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        android:clipToPadding="false"
        android:paddingBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/layoutFilters"
        tools:listitem="@layout/item_vehicle" />

</androidx.constraintlayout.widget.ConstraintLayout>