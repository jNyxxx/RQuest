<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp">

            <ImageView
                android:id="@+id/btnBack"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_back"
                android:contentDescription="Back"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                tools:ignore="HardcodedText" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Edit Vehicle"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_centerInParent="true"
                tools:ignore="HardcodedText" />
        </RelativeLayout>

        <!-- Image Preview Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginBottom="20dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            xmlns:app="http://schemas.android.com/apk/res-auto">

            <ImageView
                android:id="@+id/ivPreview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_car_placeholder"
                android:contentDescription="Vehicle Preview"
                tools:ignore="HardcodedText" />
        </androidx.cardview.widget.CardView>

        <!-- Make Input -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Make"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="#333"
            android:layout_marginBottom="4dp"
            tools:ignore="HardcodedText" />

        <EditText
            android:id="@+id/etMake"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="e.g., Toyota"
            android:inputType="text"
            android:background="@drawable/bg_input_field"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:textSize="16sp"
            android:layout_marginBottom="16dp"
            tools:ignore="HardcodedText,Autofill" />

        <!-- Model Input -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Model"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="#333"
            android:layout_marginBottom="4dp"
            tools:ignore="HardcodedText" />

        <EditText
            android:id="@+id/etModel"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="e.g., Wigo"
            android:inputType="text"
            android:background="@drawable/bg_input_field"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:textSize="16sp"
            android:layout_marginBottom="16dp"
            tools:ignore="HardcodedText,Autofill" />

        <!-- Type Input -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Type"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="#333"
            android:layout_marginBottom="4dp"
            tools:ignore="HardcodedText" />

        <EditText
            android:id="@+id/etType"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="e.g., Sedan, SUV, Hatchback"
            android:inputType="text"
            android:background="@drawable/bg_input_field"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:textSize="16sp"
            android:layout_marginBottom="16dp"
            tools:ignore="HardcodedText,Autofill" />

        <!-- Price Input -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Daily Rate ($)"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="#333"
            android:layout_marginBottom="4dp"
            tools:ignore="HardcodedText" />

        <EditText
            android:id="@+id/etPrice"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="e.g., 850.00"
            android:inputType="numberDecimal"
            android:background="@drawable/bg_input_field"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:textSize="16sp"
            android:layout_marginBottom="16dp"
            tools:ignore="HardcodedText,Autofill" />

        <!-- Transmission Spinner -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Transmission"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="#333"
            android:layout_marginBottom="4dp"
            tools:ignore="HardcodedText" />

        <Spinner
            android:id="@+id/spTransmission"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/bg_input_field"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:layout_marginBottom="16dp"
            tools:ignore="RtlSymmetry" />

        <!-- Seats Spinner -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Seats"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="#333"
            android:layout_marginBottom="4dp"
            tools:ignore="HardcodedText" />

        <Spinner
            android:id="@+id/spSeats"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/bg_input_field"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:layout_marginBottom="16dp"
            tools:ignore="RtlSymmetry" />

        <!-- Image Selection -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Vehicle Image"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="#333"
            android:layout_marginBottom="4dp"
            tools:ignore="HardcodedText" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="24dp">

            <Spinner
                android:id="@+id/spImage"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:background="@drawable/bg_input_field"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:layout_marginEnd="8dp"
                tools:ignore="RtlSymmetry" />

            <Button
                android:id="@+id/btnPreview"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:text="Preview"
                android:textColor="@color/white"
                android:background="@drawable/bg_button_orange"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:textAllCaps="false"
                tools:ignore="HardcodedText" />
        </LinearLayout>

        <!-- Update Button -->
        <Button
            android:id="@+id/btnUpdateCar"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="Update Vehicle"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold"
            android:background="@drawable/bg_button_orange"
            android:textAllCaps="false"
            android:layout_marginTop="8dp"
            tools:ignore="HardcodedText" />

    </LinearLayout>

</ScrollView>