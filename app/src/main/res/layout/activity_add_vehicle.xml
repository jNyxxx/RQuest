<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F9FA"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="24dp">

        <!-- Header Section -->
        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add New Vehicle"
            android:textColor="@color/rq_orange"
            android:textSize="28sp"
            android:textStyle="bold"
            android:contentDescription="Add new vehicle form"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/tvSubtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Complete all fields to add a vehicle to your fleet"
            android:textColor="#666"
            android:textSize="14sp"
            app:layout_constraintTop_toBottomOf="@id/tvTitle"
            app:layout_constraintStart_toStartOf="parent" />

        <!-- Vehicle Details Card -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardVehicleDetails"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="2dp"
            app:cardBackgroundColor="@color/white"
            app:layout_constraintTop_toBottomOf="@id/tvSubtitle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Vehicle Information"
                    android:textColor="#333"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="16dp"/>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tilMake"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    app:boxBackgroundMode="outline"
                    app:boxStrokeColor="@color/rq_orange"
                    app:hintTextColor="@color/rq_orange"
                    app:startIconDrawable="@android:drawable/ic_menu_my_calendar"
                    app:startIconTint="#666">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etMake"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Make"
                        android:inputType="textCapWords"
                        android:maxLines="1"
                        android:contentDescription="Vehicle manufacturer, for example Toyota, Honda, or Ford"/>
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tilModel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    app:boxBackgroundMode="outline"
                    app:boxStrokeColor="@color/rq_orange"
                    app:hintTextColor="@color/rq_orange"
                    app:startIconDrawable="@android:drawable/ic_menu_compass"
                    app:startIconTint="#666">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etModel"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Model"
                        android:inputType="textCapWords"
                        android:maxLines="1"
                        android:contentDescription="Vehicle model, for example Vios, Civic, or Mustang"/>
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tilType"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    app:boxBackgroundMode="outline"
                    app:boxStrokeColor="@color/rq_orange"
                    app:hintTextColor="@color/rq_orange"
                    app:startIconDrawable="@android:drawable/ic_menu_view"
                    app:startIconTint="#666">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etType"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Type"
                        android:inputType="textCapWords"
                        android:maxLines="1"
                        android:contentDescription="Vehicle type, for example Sedan, SUV, Van, or Pickup"/>
                </com.google.android.material.textfield.TextInputLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="12dp"
                    android:baselineAligned="false">

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/tilYear"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginEnd="8dp"
                        app:boxBackgroundMode="outline"
                        app:boxStrokeColor="@color/rq_orange"
                        app:hintTextColor="@color/rq_orange">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etYear"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Year"
                            android:inputType="number"
                            android:maxLength="4"
                            android:maxLines="1"
                            android:contentDescription="Vehicle manufacturing year"/>
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/tilPrice"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="8dp"
                        app:boxBackgroundMode="outline"
                        app:boxStrokeColor="@color/rq_orange"
                        app:hintTextColor="@color/rq_orange"
                        app:prefixText="â‚± ">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etPrice"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Rate/Day"
                            android:inputType="numberDecimal"
                            android:maxLines="1"
                            android:contentDescription="Daily rental rate in pesos"/>
                    </com.google.android.material.textfield.TextInputLayout>
                </LinearLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tilPlate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:boxBackgroundMode="outline"
                    app:boxStrokeColor="@color/rq_orange"
                    app:hintTextColor="@color/rq_orange"
                    app:startIconDrawable="@android:drawable/ic_menu_agenda"
                    app:startIconTint="#666">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etPlate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Plate Number"
                        android:inputType="textCapCharacters"
                        android:maxLines="1"
                        android:contentDescription="Vehicle license plate number"/>
                </com.google.android.material.textfield.TextInputLayout>

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Specifications Card -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardSpecifications"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="2dp"
            app:cardBackgroundColor="@color/white"
            app:layout_constraintTop_toBottomOf="@id/cardVehicleDetails"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Vehicle Specifications"
                    android:textColor="#333"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="16dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Transmission Type"
                    android:textColor="#666"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp"/>

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:cardCornerRadius="8dp"
                    app:strokeColor="#DDDDDD"
                    app:strokeWidth="1dp"
                    app:cardElevation="0dp">

                    <Spinner
                        android:id="@+id/spTransmission"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:paddingHorizontal="12dp"
                        android:contentDescription="Select transmission type: Manual or Automatic"/>
                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tilSeats"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:boxBackgroundMode="outline"
                    app:boxStrokeColor="@color/rq_orange"
                    app:hintTextColor="@color/rq_orange"
                    app:helperText="Typical values: 2, 4, 5, 7, 8"
                    app:helperTextTextColor="#999"
                    app:startIconDrawable="@android:drawable/ic_menu_sort_by_size"
                    app:startIconTint="#666">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etSeats"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Seating Capacity"
                        android:inputType="number"
                        android:maxLength="2"
                        android:maxLines="1"
                        android:contentDescription="Number of passenger seats"/>
                </com.google.android.material.textfield.TextInputLayout>

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Image Selection Card -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardImage"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="2dp"
            app:cardBackgroundColor="@color/white"
            app:layout_constraintTop_toBottomOf="@id/cardSpecifications"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Vehicle Photo"
                    android:textColor="#333"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Choose a clear photo showing the vehicle exterior"
                    android:textColor="#666"
                    android:textSize="12sp"
                    android:layout_marginBottom="12dp"/>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cvImageSelector"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?attr/selectableItemBackground"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="1dp"
                    app:strokeColor="#DDDDDD"
                    app:strokeWidth="1dp"
                    android:contentDescription="Tap to select vehicle image from gallery">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="16dp"
                        android:gravity="center_vertical">

                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@android:drawable/ic_menu_gallery"
                            android:contentDescription="Gallery icon"
                            app:tint="@color/rq_orange" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:layout_marginHorizontal="16dp">

                            <TextView
                                android:id="@+id/tvImageName"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="No image selected"
                                android:textColor="#333"
                                android:textSize="15sp"
                                android:textStyle="bold"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Tap to choose from gallery"
                                android:textColor="#999"
                                android:textSize="12sp"
                                android:layout_marginTop="2dp"/>
                        </LinearLayout>

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@android:drawable/ic_menu_camera"
                            android:contentDescription="Select image"
                            app:tint="#999" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="0dp"
                    app:strokeColor="#E0E0E0"
                    app:strokeWidth="1dp">

                    <ImageView
                        android:id="@+id/ivPreview"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:scaleType="centerCrop"
                        android:background="#F5F5F5"
                        android:contentDescription="Selected vehicle image preview"/>
                </com.google.android.material.card.MaterialCardView>

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Action Buttons -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnAddCar"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:text="Add Vehicle"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginTop="24dp"
            app:backgroundTint="@color/rq_orange"
            app:cornerRadius="8dp"
            android:contentDescription="Add vehicle to fleet"
            app:layout_constraintTop_toBottomOf="@id/cardImage"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnBack"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Cancel"
            android:textColor="#666"
            android:textSize="18sp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="24dp"
            style="@style/Widget.Material3.Button.TextButton"
            android:contentDescription="Cancel and return to previous screen"
            app:layout_constraintTop_toBottomOf="@id/btnAddCar"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>