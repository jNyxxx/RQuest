<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <!-- Back Button -->
        <FrameLayout
            android:id="@+id/btnBack"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/bg_input_field"
            android:layout_marginBottom="16dp">
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@android:drawable/ic_menu_revert"
                android:rotation="180"
                android:layout_gravity="center"
                android:contentDescription="Back button"
                app:tint="#333"/>
        </FrameLayout>

        <!-- Payment Summary Header -->
        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Payment Summary"
            android:textColor="@color/rq_orange"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"/>

        <!-- Late Fee Warning (Initially Hidden) -->
        <TextView
            android:id="@+id/tvLateFeeWarning"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFF3E0"
            android:padding="12dp"
            android:text="âš ï¸ Late return penalty applies"
            android:textColor="#E65100"
            android:textSize="14sp"
            android:textStyle="bold"
            android:visibility="gone"
            android:layout_marginBottom="16dp"
            tools:visibility="visible"/>

        <!-- Booking Summary Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardElevation="2dp"
            app:cardBackgroundColor="#F9F9F9"
            android:layout_marginBottom="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:text="Booking Summary"
                    android:textStyle="bold"
                    android:textColor="#333"
                    android:textSize="16sp"
                    android:layout_marginBottom="12dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/tvCarName"
                    android:text="Tesla Model S"
                    android:textColor="#555"
                    android:textSize="14sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:ignore="HardcodedText" />

                <TextView
                    android:id="@+id/tvDates"
                    android:text="11/13/2025 10:00 â†’ 11/29/2025 10:00"
                    android:textSize="12sp"
                    android:textColor="#999"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="16dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:ignore="HardcodedText" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#E0E0E0"
                    android:layout_marginBottom="16dp"/>

                <TextView
                    android:id="@+id/tvTotal"
                    android:text="Total: $500.00"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:textColor="@color/rq_orange"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:ignore="HardcodedText" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Select Payment Method Header -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select Payment Method"
            android:textStyle="bold"
            android:textColor="#333"
            android:textSize="16sp"
            android:layout_marginBottom="12dp"/>

        <!-- Payment Method Radio Group -->
        <RadioGroup
            android:id="@+id/rgMethod"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp">

            <RadioButton
                android:id="@+id/rbCard"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="Credit Card"
                android:background="@drawable/bg_input_field"
                android:buttonTint="@color/rq_orange"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:checked="true"
                android:layout_marginBottom="8dp"
                tools:ignore="VisualLintButtonSize" />

            <RadioButton
                android:id="@+id/rbGcash"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="GCash"
                android:background="@drawable/bg_input_field"
                android:buttonTint="@color/rq_orange"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                tools:ignore="VisualLintButtonSize" />
        </RadioGroup>

        <!-- Payment Registration Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Payment Details"
            android:textStyle="bold"
            android:textColor="#333"
            android:textSize="16sp"
            android:layout_marginBottom="12dp"/>

        <EditText
            android:id="@+id/etPaymentId"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginBottom="12dp"
            android:background="@drawable/bg_input_field"
            android:hint="Card Number (last 4 digits) / GCash Number"
            android:inputType="text"
            android:paddingHorizontal="16dp"
            tools:ignore="Autofill" />

        <EditText
            android:id="@+id/etCardholderName"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/bg_input_field"
            android:hint="Cardholder / Account Name"
            android:inputType="textPersonName"
            android:paddingHorizontal="16dp"
            tools:ignore="Autofill" />

        <!-- Important Notice -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="âš ï¸ Payment information is required before finalizing your booking."
            android:textColor="#666"
            android:textSize="12sp"
            android:background="#FFF3E0"
            android:padding="12dp"
            android:layout_marginBottom="16dp"/>

        <!-- Pickup Requirements Notice -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ðŸ“‹ Required at Pickup:\nâ€¢ Valid driver's license\nâ€¢ Government-issued ID\nâ€¢ Proof of insurance (if applicable)"
            android:textColor="#666"
            android:textSize="12sp"
            android:background="#E3F2FD"
            android:padding="12dp"
            android:layout_marginBottom="24dp"/>

        <!-- Confirm Button -->
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnConfirm"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:text="Confirm Payment"
            android:textAllCaps="false"
            android:background="@drawable/bg_button_orange"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="16sp"/>

    </LinearLayout>
</ScrollView>