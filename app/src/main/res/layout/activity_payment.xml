<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:padding="20dp">

    <!-- Header -->
    <FrameLayout
        android:id="@+id/btnBack"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/bg_input_field"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@android:drawable/ic_menu_revert"
            android:rotation="180"
            android:layout_gravity="center"
            android:contentDescription="@string/back_button"
            app:tint="#333"/>
    </FrameLayout>

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/payment_summary"
        android:textColor="#333"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/btnBack"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/btnBack"/>

    <!-- Timeline -->
    <LinearLayout
        android:id="@+id/timeline"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingVertical="10dp"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/tvTitle">

        <ImageView
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:src="@android:drawable/checkbox_on_background"
            android:contentDescription="@string/step_indicator"
            app:tint="@color/rq_orange"/>
        <View
            android:layout_width="80dp"
            android:layout_height="2dp"
            android:background="@color/rq_orange"/>
        <ImageView
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:src="@android:drawable/radiobutton_on_background"
            android:contentDescription="@string/step_indicator"
            app:tint="@color/rq_orange"/>
        <View
            android:layout_width="80dp"
            android:layout_height="2dp"
            android:background="#CCC"/>
        <ImageView
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:src="@android:drawable/radiobutton_off_background"
            android:contentDescription="@string/step_indicator"
            app:tint="#CCC"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/lblTimeline"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_marginBottom="24dp"
        app:layout_constraintTop_toBottomOf="@id/timeline">

        <TextView
            android:text="@string/dates"
            android:textSize="12sp"
            android:textColor="#999"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="40dp"/>
        <TextView
            android:text="@string/payment"
            android:textSize="12sp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="40dp"/>
        <TextView
            android:text="@string/confirm"
            android:textSize="12sp"
            android:textColor="#999"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/lblTimeline"
        app:layout_constraintBottom_toTopOf="@id/btnConfirm">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Late Fee Warning (Initially Hidden) -->
            <TextView
                android:id="@+id/tvLateFeeWarning"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFF3E0"
                android:padding="12dp"
                android:text="⚠️ Late return penalty applies"
                android:textColor="#E65100"
                android:textSize="14sp"
                android:textStyle="bold"
                android:visibility="gone"
                android:layout_marginBottom="16dp"
                tools:visibility="visible"/>

            <!-- Booking Summary Card -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardSummary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="#F9F9F9">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:text="@string/booking_summary"
                        android:textStyle="bold"
                        android:textColor="#333"
                        android:textSize="16sp"
                        android:layout_marginBottom="12dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:id="@+id/tvCarName"
                        android:text="Toyota Wigo"
                        android:textColor="#555"
                        android:textSize="14sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:ignore="HardcodedText" />

                    <TextView
                        android:id="@+id/tvDates"
                        android:text="11/13/2025 10:00 → 11/29/2025 10:00"
                        android:textSize="12sp"
                        android:textColor="#999"
                        android:layout_marginTop="4dp"
                        android:layout_marginBottom="16dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:ignore="HardcodedText" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#E0E0E0"
                        android:layout_marginBottom="16dp"/>

                    <TextView
                        android:id="@+id/tvTotal"
                        android:text="Total: $500.00"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:textColor="@color/rq_orange"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:ignore="HardcodedText" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Payment Method -->
            <TextView
                android:id="@+id/lblMethod"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/select_payment_method"
                android:textStyle="bold"
                android:textColor="#333"
                android:textSize="16sp"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="12dp"/>

            <RadioGroup
                android:id="@+id/rgMethod"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RadioButton
                    android:id="@+id/rbCard"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:text="@string/credit_card"
                    android:background="@drawable/bg_input_field"
                    android:buttonTint="@color/rq_orange"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp"
                    android:checked="true"
                    android:layout_marginBottom="8dp"
                    tools:ignore="VisualLintButtonSize" />

                <RadioButton
                    android:id="@+id/rbGcash"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:text="@string/gcash"
                    android:background="@drawable/bg_input_field"
                    android:buttonTint="@color/rq_orange"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp"
                    tools:ignore="VisualLintButtonSize" />
            </RadioGroup>

        </LinearLayout>
    </ScrollView>

    <!-- Confirm Button -->
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnConfirm"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:text="@string/confirm_payment"
        android:textAllCaps="false"
        android:background="@drawable/bg_button_orange"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="16sp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>