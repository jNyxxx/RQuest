<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="24dp">

        <ImageView
            android:id="@+id/ivLogoSmall"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/ic_launcher_foreground"
            app:tint="@color/rq_orange"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:contentDescription="App Logo" />

        <TextView
            android:id="@+id/tvHead"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Create Account"
            android:textColor="@color/rq_orange"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/ivLogoSmall" />

        <TextView
            android:id="@+id/tvSubtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sign up now and enjoy rental ease."
            android:textColor="#999"
            android:layout_marginTop="4dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvHead"/>

        <!-- Form Fields -->
        <LinearLayout
            android:id="@+id/formLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@id/tvSubtitle">

            <!-- Name Section -->
            <TextView
                android:text="Personal Information"
                android:textStyle="bold"
                android:textColor="@color/rq_orange"
                android:textSize="16sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"/>

            <EditText
                android:id="@+id/etFirstName"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginBottom="12dp"
                android:background="@drawable/bg_input_field"
                android:hint="First Name"
                android:inputType="textPersonName"
                android:paddingHorizontal="16dp" />

            <EditText
                android:id="@+id/etLastName"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginBottom="12dp"
                android:background="@drawable/bg_input_field"
                android:hint="Last Name"
                android:inputType="textPersonName"
                android:paddingHorizontal="16dp" />

            <EditText
                android:id="@+id/etDateOfBirth"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginBottom="12dp"
                android:background="@drawable/bg_input_field"
                android:hint="Date of Birth (Must be 18+)"
                android:inputType="none"
                android:paddingHorizontal="16dp" />

            <EditText
                android:id="@+id/etDriversLicense"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginBottom="12dp"
                android:background="@drawable/bg_input_field"
                android:hint="Driver's License Number"
                android:inputType="textCapCharacters"
                android:paddingHorizontal="16dp" />

            <EditText
                android:id="@+id/etAddress"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginBottom="24dp"
                android:background="@drawable/bg_input_field"
                android:hint="Home Address"
                android:inputType="textPostalAddress"
                android:paddingHorizontal="16dp" />

            <!-- Contact Section -->
            <TextView
                android:text="Contact Information"
                android:textStyle="bold"
                android:textColor="@color/rq_orange"
                android:textSize="16sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"/>

            <EditText
                android:id="@+id/etEmail"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginBottom="12dp"
                android:background="@drawable/bg_input_field"
                android:hint="Email Address"
                android:inputType="textEmailAddress"
                android:paddingHorizontal="16dp" />

            <EditText
                android:id="@+id/etPhone"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginBottom="24dp"
                android:background="@drawable/bg_input_field"
                android:hint="Phone Number"
                android:inputType="phone"
                android:paddingHorizontal="16dp" />

            <!-- Security Section -->
            <TextView
                android:text="Account Security"
                android:textStyle="bold"
                android:textColor="@color/rq_orange"
                android:textSize="16sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"/>

            <EditText
                android:id="@+id/etPassword"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginBottom="8dp"
                android:background="@drawable/bg_input_field"
                android:hint="Password"
                android:inputType="textPassword"
                android:paddingHorizontal="16dp" />

            <TextView
                android:id="@+id/tvPasswordRequirements"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Password must be 8+ characters with letters and numbers"
                android:textColor="#999"
                android:textSize="12sp"
                android:layout_marginBottom="24dp"/>

            <!-- Terms Notice -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="By registering, you confirm:\n• You are at least 18 years old\n• You hold a valid driver's license\n• You agree to present ID at vehicle pickup"
                android:textColor="#666"
                android:textSize="12sp"
                android:background="#FFF3E0"
                android:padding="12dp"
                android:layout_marginBottom="24dp"/>

        </LinearLayout>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnSignup"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:background="@drawable/bg_button_orange"
            android:text="Sign Up"
            android:textColor="@color/white"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/formLayout"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>