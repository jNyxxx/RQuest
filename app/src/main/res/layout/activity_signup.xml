<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="24dp"
        android:paddingTop="32dp"
        android:paddingBottom="32dp">

        <!-- Logo with subtle shadow effect -->
        <ImageView
            android:id="@+id/ivLogoSmall"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:layout_marginTop="8dp"
            android:contentDescription="App Logo"
            android:src="@drawable/ic_launcher_foreground"
            android:elevation="4dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Header with better spacing -->
        <TextView
            android:id="@+id/tvHead"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Create Account"
            android:textColor="@color/rq_orange"
            android:textSize="28sp"
            android:textStyle="bold"
            android:letterSpacing="0.01"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/ivLogoSmall" />

        <TextView
            android:id="@+id/tvSubtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sign up now and enjoy rental ease."
            android:textColor="#757575"
            android:textSize="14sp"
            android:layout_marginTop="6dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvHead"/>

        <!-- Form Fields with improved styling -->
        <LinearLayout
            android:id="@+id/formLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@id/tvSubtitle">

            <!-- Personal Information Section -->
            <TextView
                android:text="Personal Information"
                android:textStyle="bold"
                android:textColor="@color/rq_orange"
                android:textSize="15sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:letterSpacing="0.02"
                android:layout_marginBottom="16dp"/>

            <EditText
                android:id="@+id/etFirstName"
                android:layout_width="match_parent"
                android:layout_height="54dp"
                android:layout_marginBottom="14dp"
                android:background="@drawable/bg_input_field"
                android:hint="First Name"
                android:textColorHint="#BDBDBD"
                android:textColor="#212121"
                android:textSize="15sp"
                android:inputType="textPersonName|textCapWords"
                android:paddingHorizontal="18dp" />

            <EditText
                android:id="@+id/etLastName"
                android:layout_width="match_parent"
                android:layout_height="54dp"
                android:layout_marginBottom="14dp"
                android:background="@drawable/bg_input_field"
                android:hint="Last Name"
                android:textColorHint="#BDBDBD"
                android:textColor="#212121"
                android:textSize="15sp"
                android:inputType="textPersonName|textCapWords"
                android:paddingHorizontal="18dp" />

            <EditText
                android:id="@+id/etDateOfBirth"
                android:layout_width="match_parent"
                android:layout_height="54dp"
                android:layout_marginBottom="14dp"
                android:background="@drawable/bg_input_field"
                android:hint="Date of Birth (Must be 18+)"
                android:textColorHint="#BDBDBD"
                android:textColor="#212121"
                android:textSize="15sp"
                android:inputType="none"
                android:focusable="false"
                android:clickable="true"
                android:paddingHorizontal="18dp" />

            <EditText
                android:id="@+id/etDriversLicense"
                android:layout_width="match_parent"
                android:layout_height="54dp"
                android:layout_marginBottom="14dp"
                android:background="@drawable/bg_input_field"
                android:hint="Driver's License Number"
                android:textColorHint="#BDBDBD"
                android:textColor="#212121"
                android:textSize="15sp"
                android:inputType="textCapCharacters"
                android:paddingHorizontal="18dp" />

            <EditText
                android:id="@+id/etAddress"
                android:layout_width="match_parent"
                android:layout_height="54dp"
                android:layout_marginBottom="28dp"
                android:background="@drawable/bg_input_field"
                android:hint="Home Address"
                android:textColorHint="#BDBDBD"
                android:textColor="#212121"
                android:textSize="15sp"
                android:inputType="textPostalAddress|textCapWords"
                android:paddingHorizontal="18dp" />

            <!-- Contact Information Section -->
            <TextView
                android:text="Contact Information"
                android:textStyle="bold"
                android:textColor="@color/rq_orange"
                android:textSize="15sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:letterSpacing="0.02"
                android:layout_marginBottom="16dp"/>

            <EditText
                android:id="@+id/etEmail"
                android:layout_width="match_parent"
                android:layout_height="54dp"
                android:layout_marginBottom="14dp"
                android:background="@drawable/bg_input_field"
                android:hint="Email Address"
                android:textColorHint="#BDBDBD"
                android:textColor="#212121"
                android:textSize="15sp"
                android:inputType="textEmailAddress"
                android:paddingHorizontal="18dp" />

            <EditText
                android:id="@+id/etPhone"
                android:layout_width="match_parent"
                android:layout_height="54dp"
                android:layout_marginBottom="28dp"
                android:background="@drawable/bg_input_field"
                android:hint="Phone Number"
                android:textColorHint="#BDBDBD"
                android:textColor="#212121"
                android:textSize="15sp"
                android:inputType="phone"
                android:paddingHorizontal="18dp" />

            <!-- Account Security Section -->
            <TextView
                android:text="Account Security"
                android:textStyle="bold"
                android:textColor="@color/rq_orange"
                android:textSize="15sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:letterSpacing="0.02"
                android:layout_marginBottom="16dp"/>

            <EditText
                android:id="@+id/etPassword"
                android:layout_width="match_parent"
                android:layout_height="54dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/bg_input_field"
                android:hint="Password"
                android:textColorHint="#BDBDBD"
                android:textColor="#212121"
                android:textSize="15sp"
                android:inputType="textPassword"
                android:paddingHorizontal="18dp" />

            <TextView
                android:id="@+id/tvPasswordRequirements"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Password must be 8+ characters with letters and numbers"
                android:textColor="#757575"
                android:textSize="13sp"
                android:lineSpacingExtra="2dp"
                android:layout_marginBottom="28dp"/>

            <!-- Terms Notice with better design -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="8dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="#FFF8E1"
                android:layout_marginBottom="28dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Before you continue"
                        android:textColor="#F57C00"
                        android:textStyle="bold"
                        android:textSize="13sp"
                        android:layout_marginBottom="8dp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="By registering, you confirm:\n• You are at least 18 years old\n• You hold a valid driver's license\n• You agree to present ID at vehicle pickup"
                        android:textColor="#5D4037"
                        android:textSize="13sp"
                        android:lineSpacingExtra="3dp"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <!-- Sign Up Button with better styling -->
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnSignup"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="@drawable/bg_button_orange"
            android:text="Sign Up"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold"
            android:letterSpacing="0.03"
            android:elevation="2dp"
            app:layout_constraintTop_toBottomOf="@id/formLayout"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>